<p class="meta">Posted: {{ post.date | date:'%a %b %d, %Y' }}</p>
	{% comment %}Tags: 
	{% for tag in post.tags %}
	<span><a href="/tag/{{ tag | downcase }}">{{ tag }}</a>
		{% if forloop.index != forloop.length %}, {% endif %}
	</span>
	{% endfor %}{% endcomment %}
