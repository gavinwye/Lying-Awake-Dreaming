{% layout "index" %}
{% block content %} 
	<article>
		<h1>Post Archive</h1>
		{% archive "article" %}
		{% for item in archive.items %}
			<h2>{{ item.year }}</h2>
			<ul class="archive">
			{% for post in item.children %}
				<li>
					<a href="{{ post.slug }}">{{ post.title }}</a>
				</li>
			{% endfor %}
			</ul>
		{% endfor %}
	{% endarchive %}
	</article>
{% endblock %}